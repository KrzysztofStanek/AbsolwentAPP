<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_margin="20dp"
    >

    <TextView
        android:id="@+id/Oaplikacji_naglowek_powitalny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:cursorVisible="false"
        android:text="O aplikacji"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Zmęczony spotykaniem gorących singli w twojej okolicy? Bimber jest aplikacją dzięki której poznasz osoby chcące z tobą poimprezować.  -Znajdź ludzi w twoim mieście i oceń ich przesuwając ich kartę w lewo lub w prawo -Jeśli obydwoje zdecydujecie że checie imprezować z drugą osobą Bimber utworzy między wami konwersację " />

    <Button
        android:id="@+id/bOaplikacji_regulamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Regulamin"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/bOaplikacji_politykaprywatności"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Polityka prywatnosci" />

    <Button
        android:id="@+id/bOaplikacji_Autorzy"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Autorzy" />


</LinearLayout>